{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "include": ["**/*.ts", "**/*.tsx", "packages/react/rollup.config.ts"],
  "exclude": ["**/node_modules/**"],
}
